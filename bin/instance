#!/bin/bash

DIR="$(dirname "$0")"
. "${DIR}/config"

export ROOT_PASSWORD=$(<"${CONF_DIR}/root_password")

gcloud sql instances create $INSTANCE \
    --database-version MYSQL_5_6 \
    --tier $NODE_TIER \
    --require-ssl \
    --authorized-networks 0.0.0.0/0 \
    --activation-policy ALWAYS \
    --availability-type zonal \
    --zone $NODE_ZONE \
    --enable-bin-log \
    --failover-replica-name "${INSTANCE}-replica" \
    --storage-size 40GB \
    --storage-type SSD \
    --storage-auto-increase \
    --backup \
    --backup-start-time 03:00 \
    --maintenance-release-channel PRODUCTION \
    --maintenance-window-day SUN \
    --maintenance-window-hour 2 \
    --root-password $ROOT_PASSWORD

gcloud sql databases create $DB_NAME \
    --instance $INSTANCE

export APP_PASSWORD=$(<"${CONF_DIR}/app_password")
gcloud sql users create $DB_USER \
    --instance $INSTANCE \
    --password $APP_PASSWORD \
    --host %

rm -f "${CONF_DIR}/client.key"
gcloud sql ssl client-certs create client \
    "${CONF_DIR}/client.key" \
    --instance $INSTANCE

gcloud sql ssl client-certs describe client \
    --instance $INSTANCE \
    --format 'value(cert)' > "${CONF_DIR}/client.pem"

gcloud sql instances describe $INSTANCE \
    --format 'value(serverCaCert.cert)' > "${CONF_DIR}/ca.pem"

echo "Generated passwords and keys saved in:"
echo $CONF_DIR